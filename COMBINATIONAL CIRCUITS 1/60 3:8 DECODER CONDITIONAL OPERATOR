module decoder3to8 (input [2:0] d, output [7:0] y);
  assign y[0] = (d == 3'b000) ? 1'b1 : 1'b0;
  assign y[1] = (d == 3'b001) ? 1'b1 : 1'b0;
  assign y[2] = (d == 3'b010) ? 1'b1 : 1'b0;
  assign y[3] = (d == 3'b011) ? 1'b1 : 1'b0;
  assign y[4] = (d == 3'b100) ? 1'b1 : 1'b0;
  assign y[5] = (d == 3'b101) ? 1'b1 : 1'b0;
  assign y[6] = (d == 3'b110) ? 1'b1 : 1'b0;
  assign y[7] = (d == 3'b111) ? 1'b1 : 1'b0;
endmodule
