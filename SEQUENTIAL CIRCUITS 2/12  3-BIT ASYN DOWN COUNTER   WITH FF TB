module tb;

  reg clk, reset;
  wire [2:0] qbar;
  async_down_counter_3bit_tff DUT ( .clk(clk),.reset(reset),.qbar(qbar));
  initial begin
      clk=0;
      forever #5 clk= ~clk;
  end
  initial begin 
       $monitor("t=%0t:clk=%b,reset=%b,qbar=%b",$time,clk,reset,qbar);    
       reset=1'b0;
       #10 reset=1'b1;
       #100 $finish;
  end
endmodule
